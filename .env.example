# Snapy Capture Configuration
# Copy this file to .env and modify values as needed

# Enable or disable all capture functionality
SNAP_CAPTURE_ENABLED=true

# Default storage path for captured arguments
SNAP_CAPTURE_DEFAULT_PATH=./snap_capture

# Number of captures to retain per function (older captures are automatically cleaned up)
SNAP_CAPTURE_DEFAULT_RETENTION=2

# Whether to overwrite existing captures by default
SNAP_CAPTURE_DEFAULT_OVERWRITE=false

# Comma-separated list of module patterns to ignore (supports wildcards)
# Example: django.*,flask.*,requests.*
SNAP_CAPTURE_IGNORE_MODULES=

# Comma-separated list of function name patterns to ignore (supports wildcards)
# Example: *password*,*secret*,*auth*
SNAP_CAPTURE_IGNORE_FUNCTIONS=

# Comma-separated list of argument names to ignore (supports wildcards)
# These are automatically filtered out for security
SNAP_CAPTURE_IGNORE_ARGS=password,token,secret,key,auth,api_key,access_token,refresh_token

# Production mode settings
# When true, reduces capture overhead and minimal data capture
SNAP_CAPTURE_PRODUCTION_MODE=false

# When true, captures only essential data (function name, basic args)
SNAP_CAPTURE_MINIMAL=false